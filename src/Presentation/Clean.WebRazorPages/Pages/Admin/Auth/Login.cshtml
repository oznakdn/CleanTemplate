@page
@model Clean.WebRazorPages.Pages.Admin.Auth.LoginModel


    <div class="display-6 text-center">Sign In</div>
    <div class="col-6 offset-3 mt-4">
        <form method="post">

            <div class="form-group mb-4">
                <label class="form-label">Email address</label>
                <input type="email" asp-for="LoginRequest.email" class="form-control" />
            </div>


            <div class="form-group mb-4">
                <label class="form-label">Password</label>
                <input type="password"  asp-for="LoginRequest.password" class="form-control" />
            </div>

            <div class="row mb-4">
                <div class="col d-flex justify-content-center">

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="LoginRequest.isRememberMe" />
                        <label class="form-check-label"> Remember me </label>
                    </div>
                </div>

                <div class="col">
                    <a href="#!">Forgot password?</a>
                </div>
            </div>


            <button type="submit" asp-page-handler="Login" class="btn btn-primary btn-block mb-4">Sign in</button>

            <div class="text-center">
                <p>Not a member? <a href="#!">Register</a></p>
                <p>or sign up with:</p>
                <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-facebook-f"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-google"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-twitter"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-github"></i>
                </button>
            </div>
        </form>
    </div>
