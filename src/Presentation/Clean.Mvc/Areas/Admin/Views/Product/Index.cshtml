@model IEnumerable<GetProductsModel>

<div class="row mt-5">
    <div class="col-8 offset-2">
        <h2 class="text-center text-bg-primary">Products</h2>
    </div>
</div>
<div class="row mb-2">
    <div class="col-8 offset-2">
        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Name</th>
                    <th>Price</th>
                    <th>Currency</th>
                    <th>Category</th>
                    <th>
                        <a asp-action="Add" class="btn btn-success my-2"><i class="fa-solid fa-circle-plus"></i></a>

                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.displayName</td>
                        <td>@item.price</td>
                        <td>@item.currency</td>
                        <td>@item.category</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Detail" asp-controller="Product" asp-area="" asp-route-id="@item.id" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning text-white"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            </div>
                           
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>